{
  "name": "student-course-api",
  "version": "1.0.0",
  "description": "API pédagogique pour gérer étudiants et cours (no DB) — tests, CI, doc",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "test:coverage": "jest --runInBand --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint && npm run format:check && npm run test",
    "precommit": "npm run lint:fix && npm run format && npm run test"
  },
  "author": "EL AMRANI Amine",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Falilou2099/student-course-api.git"
  },
  "bugs": {
    "url": "https://github.com/Falilou2099/student-course-api/issues"
  },
  "homepage": "https://github.com/Falilou2099/student-course-api#readme"
}
